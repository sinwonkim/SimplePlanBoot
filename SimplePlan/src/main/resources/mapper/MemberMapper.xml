<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.MemberMapper">
	 <select id="listAll" resultType="com.simpleplan.boot.domain.MemberVO">
		<![CDATA[
		select
			member_no
			,member_id
			,member_password
			,member_name
			,member_email
			,member_joindate
		from member
		where member_no = 1
		]]>	
	</select>	
	<insert id="signUp">
	<![CDATA[
		INSERT INTO member (
			member_id
			,member_password
			,member_name
			,member_email
		) VALUES (
			#{member_id}
			,#{member_password}
			,#{member_name}
			,#{member_email}
		)	
	]]>
	</insert>
</mapper>